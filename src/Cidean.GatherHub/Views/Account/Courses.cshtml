@model IEnumerable<Cidean.GatherHub.Core.Models.Course>
@{
    Layout = "_Account";
    ViewData["Title"] = "My Courses";
}


<h2>My Courses</h2>

<div class="row">
    <div class="col-md-12">




        @if (Model.Count() > 0)
        {


            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Course</th>
                        <th>Instructor</th>
                        <th>Location</th>
                        <th>Meeting Time(s)</th>
                        <th>Actions</th>
                    </tr>



                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Title</td>
                            <td>@course.Instructor.FullName</td>
                            <td>@course.Location</td>
                            <td>@course.MeetingTimes</td>
                            <td><a asp-controller="register" asp-action="remove" asp-route-id="@course.Id" class="btn btn-danger">Remove</a></td>
                        </tr>

                    }

                </table>
            </div>

        }
        else
        {
            <p>
                There are no courses selected for registration.
            </p>

        }
    </div>
</div>
