@model Cidean.GatherHub.Core.Models.Course;
@{
    ViewData["Title"] = "Course Details";
}


<div class="row img-rounded" style="background-color:#d1dee8; padding:20px;">
    <div class="col-md-5 img-rounded" style="background: url(@Model.ImageUrl); width:400px; height:400px;">

    </div>
    
    <div class="col-md-7 course-summary">
        <h1>@Model.Title</h1>
        <h4>@Model.Category.Title</h4>
        <div>
            <i class="fa fa-star "></i>
            <i class="fa fa-star "></i>
            <i class="fa fa-star "></i>
            <i class="fa fa-star "></i>
            <i class="fa fa-star-o "></i>
        </div>
        <div>
            <h4>Instructor:</h4> @Model.Instructor.FullName
        </div>
        <div>
            <h4>Date/Times:</h4> 1/1/19 - 1/15/19, MWF 1pm - 2pm
        </div>
        <div>
            <h4>Location:</h4>@Model.Location
        </div>

        @if (Model.CourseMembers.Count(m => m.Member.EmailAddress == @User.Identity.Name) == 0)
        {
            <a asp-controller="register" asp-action="course" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Register</a>
        }
        else
        {
            <p><strong>You are already signed up for this course.</strong></p>
        }
    </div>
    


</div>

</div>
<h2>Course Description</h2>
<div class="row">
    <div class="col-md-12">
        @Html.Raw(Model.Description)
    </div>
</div>

<div class="row course-review">
    <div class="col-md-6">
        <h2>Reviews</h2>
        <div class="course-review">
            <strong>John Lansing</strong>
            on <em>4/6/2018</em>
            <div>
                <i class="fa fa-star "></i>
                <i class="fa fa-star "></i>
